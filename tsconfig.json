{
  "compilerOptions": {
    "target": "es2015",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "sanity-template/schlafen/schemas/author.js",
    "sanity-template/schlafen/schemas/blockContent.js",
    "sanity-template/schlafen/schemas/category.js",
    "sanity-template/schlafen/schemas/post.js",
    "sanity-template/schlafen/schemas/product.js",
    "sanity-template/schlafen/schemas/schema.js"
  ],
  "exclude": [
    "node_modules"
  ]
}